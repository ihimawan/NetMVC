@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Use ViewData if you used the ViewData dictionary to store the models-->
<!-- This definitely sucks.. so just use the @Model-->

@*
	This is a comment.
	On multiple lines.
*@

@{
	var className = Model.Customers.Count > 5 ? "popular" : null;
}

<!-- Use @Model if you passed the model as an argument for View()-->
<h2 class="@className">@Model.Movie.Name</h2>

@if(Model.Customers.Count == 0){
	<p>No one has rented this movie.</p>
}else{
	<ul>

	@foreach(var customer in @Model.Customers){
		<li>@customer.Name</li>	
	}

	</ul>
}